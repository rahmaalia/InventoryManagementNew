<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ProfilActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                style="@style/TextAppearance.AppCompat.Title.Inverse"
                android:text="Profill"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/exitProfil"/>

            <ImageView
                android:id="@+id/exitProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backred"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profil"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/colorPrimary"
            android:src="@drawable/avatar"
            android:layout_marginBottom="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:background="#45008577"/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:text="Nazif Aditya" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" RPL A"
            android:textColor="#000"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvnotelp"
            android:layout_width="345dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="no telp"
                android:textAlignment="center"
                android:drawableLeft="@drawable/phone"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:padding="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="345dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:layout_alignBottom="@+id/cvnotelp">

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="alamat"
                android:textAlignment="center"
                android:drawableLeft="@drawable/tempat"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:padding="8dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnKeluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="keluar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>